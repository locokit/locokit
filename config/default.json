{
  "host": "LCK_HOST",
  "port": "LCK_PORT",
  "publicUrl": "LCK_PUBLIC_URL",
  "publicPortalName": "LCK_PUBLIC_PORTAL_NAME",
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "user",
    "secret": "LCK_AUTH_SECRET",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "LCK_PUBLIC_URL",
      "issuer": "locokit",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "passwordPolicy": {
      "minLength": 8,
      "maxLength": 128,
      "uppercase": true,
      "lowercase": true,
      "digits": true,
      "symbols": true
    }
  },
  "postgres": {
    "client": "pg",
    "connection": "LCK_DATABASE_URL"
  },
  "mail": {
    "host": "MAIL_SERVER",
    "port": "MAIL_PORT",
    "user": "MAIL_USERNAME",
    "pass": "MAIL_PASSWORD",
    "from": "MAIL_DEFAULT_FROM",
    "secure": "MAIL_SECURE"
  }
}
