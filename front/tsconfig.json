{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "webpack",
      "resize-observer-browser"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      // other mappings
      "@casl/vue/patch": [
        "src/types/shims-casl.d.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/unit/local-test-utils.js"
  ],
  "exclude": [
    "node_modules",
    "packages"
  ]
}
