{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "module": "NodeNext",
    "outDir": "./lib",
    "rootDir": "./",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
