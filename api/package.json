{
  "name": "locokit-api",
  "description": "LocoKit API (over SQL)",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {},
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 17.9.1"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "sqlite",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ]
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "main": "src/",
  "browser": "dist/client",
  "scripts": {
    "vite": "vite-node src/index.ts",
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "lint": "eslint src",
    "start": "npm run compile && node lib/",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "cross-env NODE_ENV=test npm run migrate && npm run mocha",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "@feathersjs/authentication": "^5.0.0-pre.28",
    "@feathersjs/authentication-local": "^5.0.0-pre.28",
    "@feathersjs/authentication-oauth": "^5.0.0-pre.28",
    "@feathersjs/configuration": "^5.0.0-pre.28",
    "@feathersjs/errors": "^5.0.0-pre.28",
    "@feathersjs/feathers": "^5.0.0-pre.28",
    "@feathersjs/knex": "^5.0.0-pre.28",
    "@feathersjs/koa": "^5.0.0-pre.28",
    "@feathersjs/schema": "^5.0.0-pre.28",
    "@feathersjs/socketio": "^5.0.0-pre.28",
    "@feathersjs/transport-commons": "^5.0.0-pre.28",
    "@koa/cors": "^3.4.1",
    "@locokit/feathers-locokit": "^0.8.0",
    "@locokit/lck-engine": "^0.8.0",
    "feathers-swagger": "^1.2.2",
    "knex": "^2.1.0",
    "knex-schema-inspector": "^2.0.2",
    "koa-helmet": "^6.1.0",
    "koa-static": "^5.0.0",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "sqlite3": "^5.0.8",
    "swagger-ui-dist": "^4.14.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/koa__cors": "^3.3.0",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-static": "^4.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "shx": "^0.3.4",
    "vite-node": "^0.22.1"
  }
}
