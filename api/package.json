{
  "name": "locokit-api",
  "description": "LocoKit API (over SQL)",
  "version": "1.0.0-alpha.0",
  "homepage": "https://locokit.io",
  "private": true,
  "keywords": [
    "locokit",
    "low-code",
    "LCAP"
  ],
  "bugs": {},
  "engines": {
    "node": ">= 18"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "sqlite/pg",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ]
  },
  "main": "src/",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build --ssr src/index.ts",
    "debug": "DEBUG=* vite",
    "tsc:dev": "ts-node-dev --no-notify --files src/index.ts",
    "tsc:build": "rm -rf lib/ && tsc -p tsconfig.build.json",
    "lint": "eslint src",
    "prettier": "prettier -c src",
    "start": "npm run build && node lib/",
    "previtest:test": "cross-env NODE_ENV=test npm run migrate:latest && npm run seed:run-test",
    "vitest:test": "cross-env NODE_ENV=test vitest",
    "previtest:ui": "cross-env NODE_ENV=test npm run seed:run-test",
    "vitest:ui": "cross-env NODE_ENV=test vitest --ui",
    "previtest:coverage": "cross-env NODE_ENV=test npm run migrate:latest",
    "vitest:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "migrate:latest": "knex migrate:latest",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "migrate:make": "knex migrate:make",
    "seed:make": "knex seed:make",
    "seed:run-init": "knex seed:run --specific init.ts",
    "seed:run-test": "NODE_ENV=test knex seed:run --specific test.ts",
    "client:bundle": "vite build -c vite.client.config.ts --emptyOutDir",
    "client:bundle:watch": "vite build -c vite.client.config.ts --watch"
  },
  "dependencies": {
    "@casl/ability": "^5.4.4",
    "@directus/schema": "^12.1.0",
    "@feathersjs/adapter-commons": "5.0.10",
    "@feathersjs/authentication": "5.0.10",
    "@feathersjs/authentication-client": "5.0.10",
    "@feathersjs/authentication-local": "5.0.10",
    "@feathersjs/authentication-oauth": "5.0.10",
    "@feathersjs/commons": "5.0.10",
    "@feathersjs/configuration": "5.0.10",
    "@feathersjs/errors": "5.0.10",
    "@feathersjs/feathers": "5.0.10",
    "@feathersjs/knex": "5.0.10",
    "@feathersjs/koa": "5.0.10",
    "@feathersjs/schema": "5.0.10",
    "@feathersjs/socketio": "5.0.10",
    "@feathersjs/transport-commons": "5.0.10",
    "@feathersjs/typebox": "5.0.10",
    "@koa/cors": "^4.0.0",
    "@locokit/definitions": "workspace:*",
    "@locokit/engine": "workspace:*",
    "@sentry/node": "^8.32.0",
    "@sinclair/typebox": "0.25.24",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^3.3.0",
    "ejs": "^3.1.10",
    "feathers-authentication-management": "^5.0.1",
    "feathers-hooks-common": "^7.0.3",
    "feathers-swagger": "^3.0.0",
    "knex": "^3.1.0",
    "koa-helmet": "^6.1.0",
    "koa-ratelimit": "^5.1.0",
    "koa-static": "^5.0.0",
    "marked": "^4.3.0",
    "nodemailer": "^6.9.13",
    "objection": "^3.1.5",
    "password-generator": "^2.3.2",
    "password-validator": "^5.3.0",
    "pg": "^8.12.0",
    "rate-limiter-flexible": "^2.4.2",
    "sqlite3": "^5.1.7",
    "swagger-ui-dist": "^5.17.14",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv-flow": "^3.3.3",
    "@types/ejs": "^3.1.5",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-helmet": "^6.0.8",
    "@types/koa-ratelimit": "^4.2.4",
    "@types/koa-static": "^4.0.4",
    "@types/koa__cors": "^3.3.1",
    "@types/marked": "^4.3.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "axios": "^1.7.2",
    "cross-env": "^7.0.3",
    "eslint-config-love": "^109.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "glob": "^11.0.0",
    "mocha": "^10.4.0",
    "nodemon": "^2.0.22",
    "shx": "^0.3.4",
    "ts-node-dev": "^2.0.0",
    "vite-node": "^0.28.5",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-static-copy": "^0.17.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
