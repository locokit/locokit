  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch LocoKit API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/api",
      "program": "${workspaceFolder}/node_modules/.bin/vite-node",
      "args": [
        "src/index.ts"
      ],
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
